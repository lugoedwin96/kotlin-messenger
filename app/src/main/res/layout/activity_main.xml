<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@android:color/holo_blue_light">
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/username_registeration"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/white" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:paddingLeft="16dp"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp" android:hint="Username"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_registeration"
            android:background="@android:color/white"
            android:hint="Email"
            android:paddingLeft="16dp"
            app:layout_constraintEnd_toEndOf="@+id/username_registeration"
            app:layout_constraintStart_toStartOf="@+id/username_registeration" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/username_registeration" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/password_registeration" app:layout_constraintHorizontal_bias="1.0"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_registeration" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email_registeration"
            app:layout_constraintStart_toStartOf="@+id/email_registeration"
            app:layout_constraintEnd_toEndOf="@+id/email_registeration"
            app:layout_constraintHorizontal_bias="1.0" android:background="@android:color/white"
            android:contentDescription="Password" android:hint="Password"
            android:paddingLeft="16dp"/>
    <Button
            android:text="Register"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/register_button_registeration"
            app:layout_constraintEnd_toEndOf="@+id/password_registeration"
            app:layout_constraintStart_toStartOf="@+id/password_registeration" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/password_registeration"/>
</android.support.constraint.ConstraintLayout>